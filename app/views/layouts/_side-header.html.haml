.side-header-box
  %h3.side-header-box_name
    = current_user.name
  %ul.side-header-box_menu
    %li.side-header-box_menu_new-group
      = link_to new_group_path do
        = fa_icon 'pencil-square-o', class: 'icon'
    %li.side-header-box_menu_edit-user
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'